<div class="container-fluid">
    <table class="table table-striped table-hover">
        <tbody>
        {{#each productType in controller}}
            <tr>
                <td>
                    {{productType.name}}
                    {{# if productType.products.length}}
                        <i class="fa fa-times-circle pull-right disabled" title="Has products"></i>
                    {{else}}
                        <i class="fa fa-times-circle pull-right" {{action 'delete' productType}} title="Delete"></i>
                    {{/if}}
                    <i class="fa fa-edit pull-right" {{action 'edit' productType}} title="Edit"></i>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>

    <form class="pull-right">
        <button {{action 'new'}} class="btn btn-default">Add product type</button>
    </form>
</div>

{{outlet}}
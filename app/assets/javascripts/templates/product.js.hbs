<form>
    <div class="form-group">
        <label for="category">
            Category
        </label>

        {{
            view 'select'
            id="category"
            classNames="form-control"
            content=categories
            selection=model.category
            optionValuePath="content.id"
            optionLabelPath="content.name"
        }}
    </div>
    <div class="form-group">
        <label for="productType">
            Product type
        </label>

        {{
            view 'select'
            id="productType"
            classNames="form-control"
            content=productTypes
            selection=model.product_type
            optionValuePath="content.id"
            optionLabelPath="content.name"
        }}

        <button {{action 'createProductType'}} class="btn btn-default">Add product type</button>
    </div>
    <div class="form-group">
        <label for="productPacking">Product packing</label>
        {{
            view 'select'
            id="productPacking"
            classNames="form-control"
            content=productPackings
            selection=model.product_packing
            optionValuePath="content.id"
            optionLabelPath="content.name"
        }}

        <button {{action 'createProductPacking'}} class="btn btn-default">Add product packing</button>
    </div>
    <div class="checkbox">
        <label>
            {{input type="checkbox" checked=model.open}}
            Open
        </label>
    </div>
    <button type="submit" class="btn btn-default" {{action 'save'}}>Save</button>
</form>
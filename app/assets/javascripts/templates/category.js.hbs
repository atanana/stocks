<div class="container-fluid">
    <h1>{{model.name}}</h1>
    <table class="table table-striped table-hover products-table">
        <colgroup>
            <col width="*"/>
            <col width="150"/>
            <col width="50"/>
            <col width="50"/>
        </colgroup>
        <thead>
        <tr>
            <th>Product Type</th>
            <th>Product Packing</th>
            <th>Open</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {{#each product in sortedProducts}}
            <tr>
                <td>
                    {{#link-to 'product' product}}
                        {{product.product_type.name}}
                    {{/link-to}}
                </td>
                <td>
                    {{product.product_packing.name}}
                </td>
                <td>
                    {{#if product.open}}
                        <i class="fa fa-toggle-on" title="Opened. Click to close"
                            {{action 'closeProduct' product}}></i>
                    {{else}}
                        <i class="fa fa-toggle-off" title="Closed. Click to open"
                            {{action 'openProduct' product}}></i>
                    {{/if}}
                </td>

                <td>
                    <i class="fa fa-times-circle" {{action 'deleteProduct' product}} title="Delete"></i>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>

    {{#link-to 'products.new' model.id classNames="pull-right"}}
        Add product
    {{/link-to}}
</div>
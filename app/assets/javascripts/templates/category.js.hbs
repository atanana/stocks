<div class="container-fluid">
    <h1>{{model.name}}</h1>
    <table class="table table-striped table-hover products-table">
        <colgroup>
            <col width="*"/>
            <col width="150"/>
            <col width="50"/>
        </colgroup>
        <thead>
        <tr>
            <th>Product Type</th>
            <th>Product Packing</th>
            <th>Open</th>
        </tr>
        </thead>
        <tbody>
        {{#each product in model.products}}
            <tr>
                <td>
                    {{product.product_type.name}}
                </td>
                <td>
                    {{product.product_packing.name}}
                </td>
                <td>
                    {{#if product.open}}
                        <i class="fa fa-toggle-on" title="Opened. Click to close"></i>
                    {{else}}
                        <i class="fa fa-toggle-off" title="Closed. Click to open"></i>
                    {{/if}}
                </td>
            </tr>
        {{/each}}

        </tbody>
    </table>
</div>